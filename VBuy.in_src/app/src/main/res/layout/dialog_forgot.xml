<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" 
    android:background="#e5e5e5"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/close"
        android:layout_alignLeft="@+id/forgot_email"
        android:layout_alignRight="@+id/forgot_email"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#fff"
        android:text="" />

    <EditText
        android:id="@+id/forgot_email"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#000000"      
        android:textCursorDrawable="@null"      
        android:background="#fff"
        android:hint="Email" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/mail_send"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/msg"
        android:layout_below="@+id/forgot_email"
        android:layout_marginTop="55dp"
        android:textSize="14dp"
        android:textColor="#fff"
        android:background="@drawable/btn_crnr"
        android:text="Ok" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/mail_send"
        android:layout_alignBottom="@+id/mail_send"
        android:layout_alignRight="@+id/msg"
        android:textSize="14dp"
        android:textColor="#fff"
        android:background="@drawable/btn_crnr"
        android:text="Close" />

</RelativeLayout>