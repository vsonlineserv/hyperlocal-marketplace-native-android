<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_height="30dp" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lines="2"
                    android:text="Product Name"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#3B5998"
                    android:textSize="14sp" />

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </TableRow>

            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="169dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:gravity="center" >
                <FrameLayout android:layout_width="169dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="7dp">
                    <ProgressBar android:id="@+id/loadingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/list_image"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/list_image"
                        android:layout_width="160dp"
                        android:layout_gravity="center"
                        android:layout_below="@+id/share"
                        android:layout_height="180dp" />





                </FrameLayout>


            </TableRow>
        </TableLayout>
    </FrameLayout>



    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:paddingTop="2dp"
            android:textSize="14sp"
            android:text="&#x20B9;" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:paddingTop="2dp"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="3dp">

    </TableRow>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginRight="2dp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/share_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/filter_sort_button"
            android:layout_weight="2"
            android:padding="5dp">

            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/contact" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#3B5998"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="Contact" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/wish_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="5dp"
            android:background="@drawable/filter_sort_button">

            <FrameLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <!--<ImageView
                    android:id="@+id/wishlisted"
                    android:layout_width="25dp"
                    android:layout_height="20dp"

                    android:visibility="invisible"
                    android:src="@drawable/wish_full" />

                <ImageView
                    android:id="@+id/wishlist"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:visibility="visible"
                    android:src="@drawable/wish_empty" />
-->



            </FrameLayout>

            <!--<TextView
                android:id="@+id/wish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textColor="#3B5998"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:text="Wishlist" />-->

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:text="ADD TO CART" />


</LinearLayout>