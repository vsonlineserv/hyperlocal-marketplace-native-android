
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grid_border"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
        android:layout_weight="1">
            <TableRow 
                android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:layout_height="30dp" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
      		  android:layout_gravity="center"
      		  android:lines="2"
                android:text="Product Name"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#006600"
                android:textSize="18sp" />

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableRow>

           </TableRow>
            <TableRow
                    android:id="@+id/tableRow2"
        			android:layout_width="200dp"
        			android:layout_height="270dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center" >
                <FrameLayout android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp">
                    
                    <ImageView
                        android:id="@+id/list_image"
                        android:layout_width="200dp"
                         android:layout_gravity="center"
                        android:layout_below="@+id/share"
                        android:layout_height="270dp" />

                     <ImageView
                        android:id="@+id/hide_image"
                        android:layout_width="wrap_content"
                         android:layout_gravity="center"
                        android:layout_below="@+id/share"
                        android:src="@drawable/nw"
                        android:layout_height="wrap_content" />

                     

                </FrameLayout>

                        
                </TableRow>
        </TableLayout>
    </FrameLayout>

   

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginRight="3dp"
                android:text="from" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:paddingTop="2dp"
                android:textSize="18sp"
                android:text="&#x20B9;" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="TextView" 
                android:paddingTop="2dp"
                
                android:textStyle="bold"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="3dp">

            

            <TextView
                android:id="@+id/store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="3dp"
                android:paddingRight="10dp"
                android:text="TextView" />

        </TableRow>

        
   
    
    <LinearLayout
         android:layout_width="fill_parent"
    	 android:layout_height="wrap_content"
    	 android:orientation="horizontal"
    	 android:background="#FAFAFA"
    	 
    	 android:layout_marginRight="2dp"
    	 android:weightSum="4">
        
        <LinearLayout
             android:id="@+id/share_lay"
           android:layout_width="0dp"
    	   android:layout_height="wrap_content"
    	   android:padding="10dp"
    	   android:background="@drawable/filter_sort_button"
    	   android:layout_weight="2"
    	   android:layout_gravity="center"
    	   android:gravity="center" >
            
            <ImageView
                        android:id="@+id/share"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="visible"
                        android:src="@drawable/share1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#006600"
                android:textSize="16dp"
                android:text="Share" />
            
         </LinearLayout>  
         
        
         <LinearLayout
              android:id="@+id/wish_lay"
           android:layout_width="0dp"
    	   android:layout_height="wrap_content"
    	   android:padding="10dp"
    	   android:layout_weight="2"
    	   android:gravity="center" 
    	   android:background="@drawable/filter_sort_button">
		            
             <FrameLayout android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    >
            
             <ImageView
                         android:id="@+id/wishlisted"
                         android:layout_width="30dp"
                         android:layout_height="25dp"
                         
                        android:visibility="invisible"
                         android:src="@drawable/wish_full" />

                     <ImageView
                         android:id="@+id/wishlist"
                         android:layout_width="30dp"
                         android:layout_height="25dp"
                         android:visibility="visible"
                         
                         android:src="@drawable/wish_empty" />
                     
                     
                     
                     </FrameLayout>

             <TextView
                 android:id="@+id/wish_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:textColor="#FE2E2E"
                 android:textSize="16sp"
                 android:text="Wishlist" />
             
         </LinearLayout>  
        
        
   </LinearLayout>     

</LinearLayout>