<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grid_border"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/txt_lName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_fName"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/edit"
        android:text="name"
        android:textSize="22dp"
        android:textColor="#000"
        android:layout_marginTop="3dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_lName"
        android:text="name"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textColor="#000"
        android:layout_marginTop="3dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_contact"
        android:text="name"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textColor="#000"
        android:layout_marginTop="3dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_pin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_address"
        android:text="name"
        android:textSize="22dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="10dp"
        android:textColor="#000"
        android:layout_marginTop="3dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_fName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/edit"
        android:layout_marginTop="15dp"
        android:textSize="22dp"
        android:text="name"
        android:textColor="#000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/delete"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/delete"
        
        android:src="@drawable/edit" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_pin"
        android:text="name"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:layout_marginTop="3dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt_fName"
        android:layout_marginRight="10dp"
        android:src="@drawable/delete" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_address"
        android:layout_toRightOf="@+id/edit"
        android:src="@drawable/check" />

</RelativeLayout>